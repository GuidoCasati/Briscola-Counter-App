<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/coloBackground" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Player A" />

            <TextView
                android:id="@+id/team_a_score"
                style="@style/score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0" />

            <Button
                android:id="@+id/asso_A"
                style="@style/buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="addAsso"
                android:text="@string/asso" />

            <Button
                android:id="@+id/TRE_A"
                style="@style/buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="addTre"
                android:text="@string/tre" />

            <Button
                android:id="@+id/RE_A"
                style="@style/buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="AddRe"
                android:text="@string/re" />

            <Button
                android:id="@+id/Regina"
                style="@style/buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="AddRegina"
                android:text="@string/regina" />

            <Button
                android:id="@+id/Fante"
                style="@style/buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="AddFante"
                android:text="@string/fante" />
        </LinearLayout>

        <View
            android:id="@+id/separator"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/marginMedium"
            android:layout_marginTop="@dimen/marginMedium"
            android:background="@android:color/darker_gray"></View>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Player B" />

            <TextView
                android:id="@+id/team_b_score"
                style="@style/score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0" />

            <Button
                android:id="@+id/asso_b"
                style="@style/buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="addAsso"
                android:text="@string/asso" />

            <Button
                android:id="@+id/TRE_B"
                style="@style/buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="addTre"
                android:text="@string/tre" />

            <Button
                android:id="@+id/RE_B"
                style="@style/buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="AddRe"
                android:text="@string/re" />

            <Button
                android:id="@+id/Reginab"
                style="@style/buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="AddRegina"
                android:text="@string/regina" />

            <Button
                android:id="@+id/Fanteb"
                style="@style/buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="AddFante"
                android:text="@string/fante" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/resetAll"
        style="@style/buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="Reset"
        android:text="@string/reset" />
</RelativeLayout>

